{
  "name": "@callstack/polygen",
  "version": "0.0.1",
  "description": "React Native Module for running WebAssembly modules, with native performance.",
  "source": "./src/index.ts",
  "main": "./lib/commonjs/index.js",
  "module": "./lib/module/index.js",
  "types": "./lib/typescript/module/index.d.ts",
  "react-native": "",
  "exports": {
    ".": {
      "import": {
        "types": "./lib/typescript/module/index.d.ts",
        "default": "./lib/module/index.js"
      },
      "require": {
        "types": "./lib/typescript/commonjs/index.d.ts",
        "default": "./lib/commonjs/index.js"
      }
    },
    "./polyfill": {
      "import": {
        "types": "./lib/typescript/module/polyfill.d.ts",
        "default": "./lib/module/polyfill.js"
      },
      "require": {
        "types": "./lib/typescript/commonjs/polyfill.d.ts",
        "default": "./lib/commonjs/polyfill.js"
      }
    },
    "./package.json": "./package.json"
  },
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "*.podspec",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "dev": "tsc -p tsconfig.json --watch",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "clean": "del-cli android/build example/android/build example/android/app/build example/ios/build lib",
    "build": "bob build",
    "release": "release-it"
  },
  "keywords": ["react-native", "ios", "android", "webassembly", "wasm"],
  "repository": "github:callstack-incubator/polygen",
  "author": "Callstack (https://github.com/callstack)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/callstack/react-native-wasm/issues"
  },
  "homepage": "https://github.com/callstack/polygen",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@callstack/polygen-typescript-config": "workspace:^",
    "@types/react": "^18.2.44",
    "del-cli": "^5.1.0",
    "react": "17.0.2",
    "react-native": "0.75.4",
    "react-native-builder-bob": "^0.30.2",
    "release-it": "^15.0.0",
    "turbo": "^1.10.7",
    "typescript": "^5.2.2"
  },
  "resolutions": {
    "@types/react": "^18.2.44"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "commonjs",
        {
          "esm": true
        }
      ],
      [
        "module",
        {
          "esm": true
        }
      ],
      [
        "typescript",
        {
          "project": "tsconfig.build.json",
          "esm": true
        }
      ]
    ]
  },
  "codegenConfig": {
    "name": "RNPolygenSpec",
    "type": "modules",
    "jsSrcsDir": "src",
    "android": {
      "javaPackageName": "com.callstack.polygen"
    }
  }
}

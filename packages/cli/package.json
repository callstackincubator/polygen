    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "license": "MIT",
  "dependencies": {
    "@callstack/polygen-codegen": "workspace:0.1.0",
    "@callstack/polygen-config": "workspace:0.1.0",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "consola": "^3.4.0",
    "core-js": "^3.40.0",
    "globby": "^14.0.2",
    "nypm": "^0.5.2",
    "ora": "^8.1.0"
  },
  "devDependencies": {
    "@callstack/polygen-typescript-config": "workspace:^",
    "typescript": "^5.7.2"
  }
}

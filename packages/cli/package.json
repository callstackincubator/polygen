    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "consola": "^3.2.3",
    "ora": "^8.1.0",
    "@callstack/polygen-codegen": "workspace:^"
  },
  "devDependencies": {
    "typescript": "^5.7.2"
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ]
}

{
  "name": "@callstack/polygen-cli",
  "version": "0.1.0",
  "description": "The Command Line Interface for @callstack/polygen",
  "main": "./dist/index.js",
  "bin": {
    "polygen": "bin/polygen.js"
  },
  "type": "module",
  "files": [
    "bin",
    "assets",
    "dist",
    "package.json"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsc -p tsconfig.json --watch",

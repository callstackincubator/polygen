{
    "name": "wasm-gen",
    "version": "0.0.1",
    "description": "The code generator for react-native-wasm modules",
    "main": "lib/index",
    "source": "src/index",
    "bin": {
        "react-native-wasm": "./build/commands/wasm-gen.js",
        "react-native-wasm-generate": "./build/commands/wasm-gen-generate.js"
    },
    "type": "module",
    "files": [
        "src",
        "lib"
    ],
    "scripts": {
        "build": "tsc",
        "postinstall": "tsc || true",
        "typecheck": "tsc --noEmit",
        "lint": "eslint \"**/*.{ts,js}\""
    },
    "license": "MIT",
    "dependencies": {
        "@webassemblyjs/wasm-parser": "^1.12.1",
        "chalk": "^5.3.0",
        "commander": "^12.1.0",
        "consola": "^3.2.3",
        "execa": "^9.4.1",
        "find-up": "^7.0.0",
        "glob": "^11.0.0",
        "ora": "^8.1.0"
    },
    "eslintConfig": {
        "root": true,
        "extends": [
            "@react-native",
            "prettier"
        ],
        "rules": {
            "react/react-in-jsx-scope": "off",
            "prettier/prettier": [
                "error",
                {
                    "quoteProps": "consistent",
                    "singleQuote": true,
                    "tabWidth": 2,
                    "trailingComma": "es5",
                    "useTabs": false
                }
            ]
        }
    },
    "eslintIgnore": [
        "node_modules/",
        "lib/"
    ],
    "prettier": {
        "quoteProps": "consistent",
        "singleQuote": true,
        "tabWidth": 2,
        "trailingComma": "es5",
        "useTabs": false
    }
}

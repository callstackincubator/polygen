{
  "name": "react-native-wasm-turbo-repo",
  "version": "0.1.0",
  "description": "React Native Module for running WebAssembly modules without interpretng.",
  "homepage": "https://github.com/callstack/react-native-wasm#readme",
  "author": "Callstack (https://github.com/callstack)",
  "license": "MIT",
  "scripts": {
    "example": "yarn workspace react-native-wasm-example",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "typecheck": "turbo run typecheck",
    "build:android": "turbo run build:android",
    "build:ios": "turbo run build:ios"
  },
  "keywords": [
    "react-native",
    "ios",
    "android",
    "wasm",
    "webassembly"
  ],
  "devDependencies": {
    "@evilmartians/lefthook": "^1.5.0",
    "@react-native/eslint-config": "^0.73.1",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.0.3",
    "turbo": "^1.10.7",
    "typescript": "^5.2.2"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "yarn@4.5.0",
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  }
}

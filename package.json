{
  "name": "polygen",
  "private": true,
  "version": "0.1.0",
  "description": "React Native Module for running WebAssembly modules without interpretng.",
  "homepage": "https://github.com/callstack-incubator/polygen#readme",
  "author": "Callstack (https://github.com/callstack)",
  "license": "MIT",
  "scripts": {
    "dev": "turbo run dev",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint lint:root",
    "lint:fix": "turbo run lint:fix lint-fix:root",
    "clean": "turbo run clean && rm -rf node_modules",
    "build": "turbo run build",
    "lint:root": "eslint \"packages/*/**/*.{js,jsx,ts,tsx}\" \"apps/*/**/*.{js,jsx,ts,tsx}\"",
    "lint-fix:root": "eslint \"packages/*/**/*.{js,jsx,ts,tsx}\" \"apps/*/**/*.{js,jsx,ts,tsx}\" --fix",
    "test": "turbo run test test:root",
    "test:root": "vitest"
  },
  "keywords": [
    "react-native",
    "ios",
    "android",
    "wasm",
    "webassembly"
  ],
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.15.0",
    "@evilmartians/lefthook": "^1.5.0",
    "@react-native/eslint-config": "^0.73.1",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.0.3",
    "turbo": "^2.3.3",
    "typescript": "^5.2.2"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "packageManager": "yarn@4.5.3"
}
